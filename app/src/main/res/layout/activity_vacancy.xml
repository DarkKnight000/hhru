<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VacancyActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/back"
            android:scaleType="fitStart">
        </ImageView>
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/look">
        </ImageView>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/share">
        </ImageView>
        <ImageView
            android:id="@+id/heart_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/heart1">
        </ImageView>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/vacancy_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вакансия"
                    android:textSize="22sp">
                </TextView>
                <TextView
                    android:id="@+id/vacancy_salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:text="Доход"
                    android:textSize="14sp">
                </TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/vacancy_experience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Опыт"
                        android:textSize="14sp">
                    </TextView>
                    <TextView
                        android:id="@+id/vacancy_schedules"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3dp"
                        android:text="Занятость"
                        android:textSize="14sp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_otklik"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="8dp"
                    android:backgroundTint="#015905">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp">
                        <TextView
                            android:id="@+id/vacancy_otklik"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="16dp"
                            android:textSize="14sp"
                            android:text="0 человек сейчас смотрят">
                        </TextView>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="end"
                            android:src="@drawable/looking_now">
                        </ImageView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_looking"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#015905">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp">
                        <TextView
                            android:id="@+id/vacancy_looking"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="16dp"
                            android:textSize="14sp"
                            android:text="0 человек сейчас смотрят">
                        </TextView>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="end"
                            android:src="@drawable/looking_now">
                        </ImageView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_marginVertical="10dp"
                android:backgroundTint="#222325">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/vacancy_company"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:text="Компания">
                        </TextView>
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/check_company"
                            android:layout_marginStart="8dp"
                            android:layout_gravity="center">
                        </ImageView>
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        app:cardCornerRadius="8dp"
                        android:layout_marginVertical="8dp"
                        android:clipChildren="false">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_margin="0dp"
                            android:padding="0dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/map">
                        </ImageView>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/vacancy_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:text="Город, улица, дом">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/vacancy_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginVertical="8dp"
                android:text="sfq fwecwec">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:textSize="20sp"
                android:text="Ваши задачи">
            </TextView>
            <TextView
                android:id="@+id/vacancy_responsibilities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:textSize="14sp"
                android:text="sfq fwecwec">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:textSize="14sp"
                android:text="Задайте вопрос работодателю">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:textSize="14sp"
                android:textColor="#858688"
                android:text="Он получит его с откликом на вакансию">
            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RVQuestions"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/button_otklik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Откликнуться"
        android:backgroundTint="#4CB24E"
        android:textSize="16sp"
        android:layout_margin="16dp"
        android:textColor="#FFFFFF"
        app:cornerRadius="8dp">
    </Button>

</LinearLayout>